<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center|center"
    android:weightSum="6"
    android:background="@color/news_tab_back">




    <com.infinitysports.designwithmenu.ImageViewPefectSquare
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:adjustViewBounds="true"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:background="#00000000"
        android:id="@+id/Left_arrow_fab1" />




    <com.infinitysports.designwithmenu.MyTextView
        android:id="@+id/tv_Frag_First"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:layout_weight="4"
        android:clickable="true"
        android:layout_gravity="center_vertical"
        android:textAlignment="center"
        android:textSize="15dp"
        android:text="First fragment"/>


    <com.infinitysports.designwithmenu.ImageViewPefectSquare
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_arrow_left"
        android:adjustViewBounds="true"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:background="#00000000"
        android:id="@+id/imageViewPefectSquare" />


</LinearLayout>